{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/api/v1/**/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "access_token": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "build"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "tsoa": ["./node_modules/tsoa/dist"],
      "tsoa/*": ["./node_modules/tsoa/dist/*"]
    }
  }
}
