{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/api/v1/**/*.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "build"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/v1/*"],
      "@config/*": ["./src/config/*"],
      "@helper/*": ["./src/helper/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@models/*": ["./src/models/*"],
      "tsoa": ["./node_modules/tsoa/dist"],
      "tsoa/*": ["./node_modules/tsoa/dist/*"]
    }
  }
}
