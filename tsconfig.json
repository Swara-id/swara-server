{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/v1/*"],
      "@config/*": ["./src/config/*"],
      "@helper/*": ["./src/helper/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@models/*": ["./src/models/*"],
      "tsoa": ["node_modules/tsoa/dist"],
      "tsoa/": ["node_modules/tsoa/dist/"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },

  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
